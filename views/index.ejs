<%- include('layouts/header') %>

<div class="container">
	<div class="row my-4">
		<div class="col-lg-12">
	    	<div class="table-responsive">
	    	<% if (countries != '') { %>
	    		<table class="table table-stripped text-center">
		    		<thead>
		    			<tr class="table-dark">
		    				<th>ID</th>
		    				<th>Name</th>
		    				<th>Action</th> 				
		    			</tr>
		    		</thead>
		    		<tbody>
		    		<% countries.forEach((country, index) => { %>
		    			<tr class="align-middle">
		    				<td><%= index %></td>
		    				<td><a href="/country/<%= country._id %>"><%= country.name %></a></td>
		    				<td>
		    					<a href="/delete/<%= country._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
		    				</td>
		    			</tr>		    		
		    		<% }) %>
		    		</tbody>
		    	</table>
	    	<% } else { %>
	    		<h1 class="text-center text-secondary mt-5">No countries found in the database !</h1>
	    	<% } %>
		    </div>
	    </div>
	</div>
</div>

<%- include('layouts/footer') %>