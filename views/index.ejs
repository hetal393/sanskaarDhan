<%- include('layouts/header') %>

<!-- Curtain Start -->
	<div class="container-fluid p-0 mb-5">
		<div class="curtain">
			<div class="curtain__wrapper">
				<input type="checkbox" checked>
				<div class="curtain__panel curtain__panel--left">
					<h1>"ક્ષમા એજ મોક્ષનો&nbsp;</h1>
				</div> 
				<div class="curtain__content">
					<img src="/krupaludev.jpg">
				</div>
				<div class="curtain__panel curtain__panel--right">
					<h1>ભવ્ય દરવાજો છે."</h1>
				</div> 
			</div> 
		</div>
	</div>
<!-- Curtain End -->

<!-- Carousel Start -->
<div class="container mt-3">
	<div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
		<h1 class="mb-3">Sadguru Vichaar</h1>
	</div>
	<div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s">
		<div id="myCarousel" class="carousel slide" data-ride="carousel" style="border-radius: 5px;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">

			<!-- Indicators -->
			<ul class="carousel-indicators">
				<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
				<li data-target="#myCarousel" data-slide-to="1"></li>
				<li data-target="#myCarousel" data-slide-to="2"></li>
			</ul>
			  
			<!-- The slideshow -->
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="/sv1.jpeg" width="1100" height="550">
				</div>
				<div class="carousel-item">
					<img src="/sv2.jpeg" width="1100" height="550">
				</div>
				<div class="carousel-item">
					<img src="/sv3.jpeg" width="1100" height="550">
				</div>
			</div>
			  
			<!-- Left and right controls -->
			<a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
				<span class="carousel-control-prev-icon"></span>
			</a>
			<a class="carousel-control-next" href="#myCarousel" data-slide="next">
				<span class="carousel-control-next-icon"></span>
			</a>
		</div>
	</div>
</div>
<!-- Carousel End -->


