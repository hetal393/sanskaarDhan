<%- include('layouts/header') %>

<!-- Vicharan Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <h1 class="mb-3">Krupaludev's Vicharan</h1>
        </div>
        <div class="row g-4">
            <% if (vicharans != '') { %>
            <% vicharans.forEach((vicharan) => { %>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="hover-container position-relative text-center">
                    <img class="hover-image img-fluid rounded" src="<%= vicharan.photo %>" alt="">
                    <div class="middle">
                        <span class="hover-text d-block text-center h4 mt-3 mb-4"><%= vicharan.title%></span>
                    </div>
                </div>
            </div>
            <% }) %>
            <% } else { %>
            <!-- 404 Start -->
            <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
                <div class="container text-center">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <i class="bi bi-exclamation-triangle display-1 text-primary"></i>
                            <h1 class="display-1">404</h1>
                            <h1 class="mb-4">Data Not Found</h1>
                            <p class="mb-4">Weâ€™re sorry, the data you are looking for is not on our website! Maybe go to our home page or try again?</p>
                            <a class="btn btn-primary rounded-pill py-3 px-5" href="/">Go Back To Home</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- 404 End -->
            <% } %>
        </div>
    </div>
</div>
<!-- Vicharan End -->

<%- include('layouts/footer') %>