<%- include('layouts/header') %>

<div class="container">
	<div class="row">
		<div class="col-lg-6 mx-auto mt-4">
			<div class="card border-primary">
				<div class="card-header bg-primary">
					<h3 class="text-light">Add New Country</h3>
				</div>
				<div class="card-body p-2">
					<form action="/addCountry" method="post" id="add-form" enctype="multipart/form-data">
						<div class="mb-3">
						  <label for="name" class="form-label">Enter Name:</label>
						  <input class="form-control form-control-lg" type="text" name="name" required />
						</div>
						<div class="mb-3">
						  <label for="continent" class="form-label">Enter Continent:</label>
							<select class="form-select form-control form-control-lg" id="inputGroupSelect01" name="continent">
							    <option selected>Choose...</option>
							    <option  value="Oceania">Oceania</option>
							    <option  value="Europe">Europe</option>
							    <option  value="Africa">Africa</option>
							    <option  value="Asia">Asia</option>
							    <option  value="North America">North America</option>
							    <option  value="South America">South America</option>
							    <option  value="Antarctica">Antarctica</option>
							</select>
						</div>
						<div class="mb-3">
						  <label for="rank" class="form-label">Enter Rank:</label>
						  <input class="form-control form-control-lg" type="text" name="rank" required />
						</div>
						<div class="mb-3">
						  <label for="image" class="form-label">Select Image</label>
						  <input class="form-control form-control-lg" type="file" name="image" required />
						</div>
						<div class="mb-3 d-grid">
						  <input class="btn btn-primary btn-lg" type="submit" name="submit" value="Add Country" 
						  required />
						</div>
					</form>
				</div>
			</div>
	    </div>
	</div>
</div>

<%- include('layouts/footer') %>